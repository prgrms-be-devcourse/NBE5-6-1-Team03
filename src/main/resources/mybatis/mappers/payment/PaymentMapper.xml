<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grepp.gridncircle.app.model.payment.PaymentRepository">

  <!-- 주문 + 메뉴 정보 -->
  <resultMap id="orderMap" type="com.grepp.gridncircle.app.model.order.dto.OrderDto">
    <id property="id" column="id"/>
    <result property="userId" column="user_id"/>
    <result property="userName" column="user_name"/>
    <result property="userEmail" column="user_email"/>
    <result property="userAddress" column="user_adress"/>
    <result property="createdAt" column="created_at"/>
    <result property="status" column="status"/>

    <collection property="orderedMenuList" ofType="com.grepp.gridncircle.app.model.order.dto.OrderedMenuDto"
      column="id" select="selectOrderedMenuByOrderId"/>
  </resultMap>


  <select id="selectAll" resultType="com.grepp.gridncircle.app.model.order.dto.OrderDto">
    SELECT * FROM orders
  </select>

  <insert id="insertOrder" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO orders (user_id, user_name, user_email, user_address, created_at, status)
    VALUES (#{userId}, #{userName}, #{userEmail}, #{userAddress}, NOW(), 'ORDER_ACCEPT')
  </insert>

  <insert id="insertOrderedMenu">
    INSERT INTO ordered_menu (order_id, menu_id, quantity)
    VALUES (#{orderId}, #{menuId}, #{quantity})
  </insert>


  <update id="updateOrderStatus">
    UPDATE orders
    SET status = #{status}
    WHERE id = #{orderId}
  </update>

</mapper>